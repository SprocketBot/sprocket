# RabbitMQ Configuration
RABBITMQ_USER=sprocketbot
RABBITMQ_PASSWORD=localdevpassword
RABBITMQ_URL=amqp://sprocketbot:localdevpassword@localhost:5672

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=localdevpassword
