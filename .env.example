# Sprocket Configuration Environment Variables
# Copy this file to .env and fill in your values
# These environment variables take precedence over file-based secrets and config files

# Authentication - Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_SECRET=your_google_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Authentication - Discord OAuth
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_SECRET=your_discord_secret
DISCORD_CALLBACK_URL=http://localhost:3000/auth/discord/callback

# Authentication - JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=24h
ACCESS_EXPIRY=15m
REFRESH_EXPIRY=7d
FRONTEND_CALLBACK=http://localhost:3000/auth/callback

# Bot Configuration
BOT_PREFIX=!

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=sprocket
DB_PASSWORD=your_database_password
DB_DATABASE=sprocket
DB_ENABLE_LOGS=false

# Redis/Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_PREFIX=sprocket:
REDIS_SECURE=false

# Cache can override Redis settings
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_PASSWORD=your_cache_password
CACHE_SECURE=false

# MinIO Object Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_USE_SSL=false
MINIO_REPLAYS_BUCKET=replays
MINIO_IMAGE_GENERATION_BUCKET=image-generation

# Transport/Message Queue
TRANSPORT_URL=amqp://localhost:5672
CELERY_BROKER=amqp://localhost:5672
CELERY_QUEUE=celery
TRANSPORT_CORE_QUEUE=core
TRANSPORT_BOT_QUEUE=bot
TRANSPORT_ANALYTICS_QUEUE=analytics
TRANSPORT_MATCHMAKING_QUEUE=matchmaking
TRANSPORT_NOTIFICATION_QUEUE=notification
TRANSPORT_EVENTS_QUEUE=events
TRANSPORT_EVENTS_APPLICATION_KEY=your_events_key
TRANSPORT_IMAGE_GENERATION_QUEUE=image-generation
TRANSPORT_SUBMISSION_QUEUE=submission

# Web Configuration
WEB_URL=http://localhost:3000
WEB_API_ROOT=/api

# Web Client Configuration
CLIENT_GQL_URL=http://localhost:4000/graphql
CLIENT_SECURE=false
CLIENT_CHATWOOT_ENABLED=false
CLIENT_CHATWOOT_URL=https://app.chatwoot.com
CLIENT_CHATWOOT_WEBSITE_TOKEN=your_chatwoot_website_token

# Chatwoot Integration
CHATWOOT_HMAC_KEY=your_chatwoot_hmac_key

# GraphQL Configuration
GQL_URL=http://localhost:4000/graphql
GQL_PLAYGROUND=true

# Logging
LOGGER_LEVELS=debug

# Default Organization
DEFAULT_ORGANIZATION_ID=1