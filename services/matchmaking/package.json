{
  "name": "@sprocketbot/matchmaking",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "bun run nest build",
    "format": "bunx prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "bun run nest start",
    "start:dev": "bun run --hot nest start --watch",
    "start:debug": "bun run --inspect-brk nest start --debug --watch",
    "start:prod": "bun dist/main",
    "lint": "bunx eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "test:debug": "bun --inspect-brk test --run-in-band",
    "test:unit": "bun test test/.*\\.spec\\.ts$",
    "test:unit:watch": "bun test --watch test/.*\\.spec\\.ts$",
    "test:unit:cov": "bun test --coverage test/.*\\.spec\\.ts$",
    "test:e2e": "bun test --config ./test/jest-e2e.json",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d",
    "db:logs": "docker compose logs -f",
    "typeorm": "bunx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "bun run typeorm migration:generate -- -n",
    "migration:run": "bun run typeorm migration:run",
    "migration:revert": "bun run typeorm migration:revert",
    "schema:sync": "bun run typeorm schema:sync",
    "schema:drop": "bun run typeorm schema:drop"
  },
  "type": "module",
  "bun": {
    "test": "bun test"
  },
  "dependencies": {
    "@nestjs/bullmq": "^10.1.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.3.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/typeorm": "^10.0.1",
    "@sprocketbot/lib": "workspace:*",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "bullmq": "^5.5.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.19",
    "valibot": "^0.30.0"
  },
  "peerDependencies": {
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "exports": {
    ".": {
      "import": "./src/connector/matchmaking.connector.ts",
      "require": "./dist/connector/matchmaking.connector.js",
      "types": "./src/connector/matchmaking.connector.ts"
    }
  },
  "main": "./src/connector/matchmaking.connector.ts",
  "types": "./src/connector/matchmaking.connector.ts",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}